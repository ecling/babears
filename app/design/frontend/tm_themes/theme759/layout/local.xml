		<reference name="header">

			<!-- * Currency|Language type2  * -->
			<reference name="currency">
				<action method="setTemplate">
					<template>directory/currency_2.phtml</template>
				</action>
			</reference>
			<reference name="store_language">
				<action method="setTemplate">
					<template>page/switch/languages_2.phtml</template>
				</action>
			</reference>
			<!-- *** -->
			
			<!-- * Currency|Language mobile  * -->
			<block type="page/switch" name="store_language_2" as="store_language_2" template="page/switch/languages_2.phtml"/>
