				mapTypeId: google.maps.MapTypeId.<?php echo $contacts_map_settings['type']; ?>,
				<?php if (strlen($contacts_map_settings['styles']) > 0) { ?>
					styles: <?php echo $contacts_map_settings['styles']; ?>,
				<?php } else{ ?>
					styles: [
						    {
						        "featureType": "landscape",
