/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>



<?php if($this->getCurrencyCount()>1): ?>
<div class="header-button currency-list">
	<a title="<?php echo $this->__('Currency') ?>" href="#"><?php echo Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getSymbol(); ?></a>
	<ul>
	<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
	<?php $_selected = ($_code == $this->getCurrentCurrencyCode()) ? ' class="selected"' : '' ?>
		<li>
			<a <?php echo $_selected ;?> href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" title="<?php echo $_code ?>"><?php echo $_name ?> - <?php echo $_code ?></a>
		</li>
	<?php endforeach; ?>
	</ul>
</div>
<?php endif; ?>

