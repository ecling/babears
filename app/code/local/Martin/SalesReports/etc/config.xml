<?xml version="1.0"?>
<config>
    <modules>
        <Martin_SalesReports>
            <version>1.3.15</version>
        </Martin_SalesReports>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <salesreports after="Mage_Adminhtml">Martin_SalesReports_Adminhtml</salesreports>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <salesreports>
                <class>Martin_SalesReports_Model</class>
                <resourceModel>salesreports_resource</resourceModel>
            </salesreports>
            <salesreports_resource>
                <class>Martin_SalesReports_Model_Resource</class>
                <deprecatedNode>salesreports_mysql4</deprecatedNode>
            </salesreports_resource>
        </models>
        <blocks>
            <salesreports>
                <class>Martin_SalesReports_Block</class>
            </salesreports>
        </blocks>
        <helpers>
            <salesreports>
                <class>Martin_SalesReports_Helper</class>
            </salesreports>
        </helpers>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <salesreports module="Martin_SalesReports">
                    <file>sales_reports.xml</file>
                </salesreports>
            </updates>
        </layout>
    </adminhtml>
</config>
