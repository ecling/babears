				<?php $counter = 0; ?>

				<?php foreach ($markers as $marker):?>	
					<?php $counter++; ?>

				<?php if (strlen($marker['image']) > 0):
					$marker_image = $this->getSkinUrl('images/' . $marker['image'], array('_secure'=>true)); ?>
					var image<?php echo $counter ?> = {
