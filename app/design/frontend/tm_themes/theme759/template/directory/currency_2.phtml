 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>


<?php if($this->getCurrencyCount()>1): ?>
<?php
$items = array();
    $_current = null;
foreach ($this->getCurrencies() as $_code => $_name){
    $_selected = $_selected_option = '';
    if ($_code == $this->getCurrentCurrencyCode()) {
        $_selected = ' class="selected"';
        $_selected_option = ' selected="selected"';
        $_current = $_code;
    }
    $items[] = '<li><a href="'. $this->getSwitchCurrencyUrl($_code) .'" '. $_selected .'><span>'. $_name.' -</span> '.$_code  .'</a></li>';
    $select_currency[] = '<option value="'. $this->getSwitchCurrencyUrl($_code) .'" '. $_selected_option .'>'. $_name.' - '.$_code  .'</option>';
}
?>

<div class="header-button currency-list full_mode">
    <div class="header-button-title">
        <span class="current"><?php echo $this->htmlEscape($_current);  ?></span>
    </div>

    <ul>
    <?php foreach ($this->getCurrencies() as $_code => $_name): ?>

    <?php
    $currentUrl = Mage::helper('core/url')->getCurrentUrl();
    $currentUrl = Mage::getModel('core/url')->getUrl($currentUrl,array('_query'=>array('currency'=>$_code),'_current'=>true,'_use_rewrite'=>true));
    ?>

    <?php $_selected = ($_code == $this->getCurrentCurrencyCode()) ? ' class="selected"' : '' ?>
        <li>
            <a <?php echo $_selected ;?> href="<?php echo $currentUrl;//echo $this->getSwitchCurrencyUrl($_code) ?>" title="<?php echo $_code ?>"><span><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol() .' '. $_name ?></span><span class="mobile-part"><?php echo $_code ?></span></a>
        </li>
    <?php endforeach; ?>
    </ul>
</div>

<?php endif; ?>

