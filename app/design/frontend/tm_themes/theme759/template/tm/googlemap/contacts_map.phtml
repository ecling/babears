				    return function() {
				        infowindow.setContent(content);
				        infowindow.open(map,marker);
				    };
				})(marker,content,infowindow)); 

				<?php endforeach; ?>
				<?php ob_get_contents(); ?>
				
				marker.setMap(map);
				
